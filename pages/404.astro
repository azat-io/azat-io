---
import Typography from '~/components/Typography.astro'
import Layout from '~/layouts/Default.astro'
import Title from '~/components/Title.astro'
---

<Layout
  description="Page not found"
  title="404"
>
  <div class="wrapper">
    <Title>404</Title>
    <Typography align="center">
      Page not found. Back to <a href="/">home</a>
    </Typography>
  </div>
</Layout>

<script>
  {
    let tracked = false

    if (globalThis.fathom) {
      globalThis.fathom.trackEvent('view: 404 page')
      tracked = true
    }

    if (!tracked) {
      document.addEventListener(
        'astro:page-load',
        () => {
          if (!tracked && globalThis.fathom) {
            globalThis.fathom.trackEvent('view: 404 page')
            tracked = true
          }
        },
        { once: true },
      )
    }
  }
</script>

<style>
  .wrapper {
    display: flex;
    flex-direction: column;
    place-content: center;
    block-size: 100%;
  }
</style>
