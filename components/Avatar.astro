---
import { Picture } from 'astro:assets'

import src from '~/assets/avatar.png'

interface Props {
  alt?: string
}

let { alt } = Astro.props
---

<Picture
  formats={['avif', 'webp']}
  draggable="false"
  loading="eager"
  class="avatar"
  {src}
  {alt}
/>

<style>
  .avatar {
    inline-size: 220px;
    block-size: 220px;
    user-select: none;
    border-radius: 50%;
  }
</style>
