---
import { Picture } from 'astro:assets'

import avatar from '~/assets/avatar.png'

interface Props {
  alt?: string
}

let { alt } = Astro.props
---

<Picture
  formats={['avif', 'webp']}
  loading="eager"
  class="avatar"
  src={avatar}
  alt={alt}
/>

<style>
  .avatar {
    inline-size: 220px;
    block-size: 220px;
    user-select: none;
    border-radius: 50%;
    -webkit-user-drag: none;
  }
</style>
