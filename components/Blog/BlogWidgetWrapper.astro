---
interface Props {
  class?: string
}

let { class: className, ...props } = Astro.props
---

<div class:list={['widget-wrapper', className]} {...props}>
  <slot />
</div>

<style>
  .widget-wrapper {
    display: grid;
    grid-template-columns: repeat(var(--columns), 1fr);
    gap: var(--space-m);
    margin-block: var(--space-m);
    container-type: inline-size;
    --columns: 1;

    @container (inline-size >= 560px) {
      --columns: 2;
    }

    @media print {
      display: none;
    }
  }
</style>
