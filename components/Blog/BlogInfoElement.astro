---
import Typography from '~/components/Typography.astro'

let { props } = Astro
---

<Typography class:list="text" tag="span" size="2xs" mbs="2xs" {...props}>
  <slot />
</Typography>

<style>
  .text {
    display: flex;
    gap: var(--space-2xs);
    place-items: center;
    line-height: 1.25 !important;

    :global(svg) {
      inline-size: 1lh;
      block-size: 1lh;
    }
  }
</style>
