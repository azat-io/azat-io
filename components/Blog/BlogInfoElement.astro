---
import type { Props as TypographyProps } from '~/components/Typography.astro'

import Typography from '~/components/Typography.astro'

type Props = TypographyProps

let { props } = Astro
---

<Typography
  class:list="text"
  tag="span"
  size="2xs"
  mbs="2xs"
  {...props}
>
  <slot />
</Typography>

<style>
  .text {
    display: flex;
    flex-wrap: nowrap;
    gap: var(--space-2xs);
    place-items: center;
    line-height: 1.25 !important;

    :global(svg) {
      inline-size: 1lh;
      block-size: 1lh;
    }
  }
</style>
