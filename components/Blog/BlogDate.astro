---
import BlogInfoElement from '~/components/Blog/BlogInfoElement.astro'
import Icon from '~/components/Icon/Icon.astro'
import Date from '~/components/Date.astro'

interface Props {
  itemprop?: string
  date: Date
}

let { date, ...props } = Astro.props
---

<BlogInfoElement>
  <Icon class="calendar-icon" name="calendar" size="xs" />
  <Date {date} {...props} />
</BlogInfoElement>

<style>
  .calendar-icon {
    @container (inline-size >= 560px) {
      display: none;
    }
  }
</style>
