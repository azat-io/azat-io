---
import Typography from '~/components/Typography.astro'
import CalendarIcon from '~/icons/calendar.svg?raw'
import Date from '~/components/Date.astro'

interface Props {
  itemprop?: string
  date: Date
}

let { date, ...props } = Astro.props
---

<Typography class="text" tag="span" size="2xs">
  <Fragment set:html={CalendarIcon} />
  <Date date={date} {...props} />
</Typography>

<style>
  .text {
    display: flex;
    gap: var(--space-2xs);
    place-items: end;
    line-height: 1 !important;

    :global(svg) {
      display: flex;
      flex-shrink: 0;
      block-size: 1.25lh;

      @container (inline-size >= 560px) {
        display: none;
      }
    }
  }
</style>
