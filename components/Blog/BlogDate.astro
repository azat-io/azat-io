---
import BlogInfoElement from '~/components/Blog/BlogInfoElement.astro'
import IconCalendar from '~/icons/calendar.svg'
import Date from '~/components/Date.astro'

interface Props {
  itemprop?: string
  date: Date
}

let { date, ...props } = Astro.props
---

<BlogInfoElement>
  <IconCalendar class="icon" />
  <Date
    {date}
    {...props}
  />
</BlogInfoElement>

<style>
  .icon {
    inline-size: var(--size-icon-xs);
    block-size: var(--size-icon-xs);
  }
</style>
