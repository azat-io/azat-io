---
import BlogInfoElement from '~/components/Blog/BlogInfoElement.astro'
import CalendarIcon from '~/icons/calendar.svg?raw'
import Date from '~/components/Date.astro'

interface Props {
  itemprop?: string
  date: Date
}

let { date, ...props } = Astro.props
---

<BlogInfoElement class="date">
  <Fragment set:html={CalendarIcon} />
  <Date date={date} {...props} />
</BlogInfoElement>

<style>
  .date {
    :global(svg) {
      @container (inline-size >= 560px) {
        display: none;
      }
    }
  }
</style>
