---
import IconStar from '~/icons/star.svg'

interface Props {
  filled?: boolean
}

let { filled } = Astro.props
---

<IconStar class:list={['icon', filled && 'filled']} />

<style>
  .icon {
    inline-size: var(--size-icon-xs);
    block-size: var(--size-icon-xs);
  }

  .filled {
    fill: var(--color-content-primary);

    @media print {
      fill: var(--color-content-print);
    }
  }
</style>
