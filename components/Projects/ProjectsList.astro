---
let { props } = Astro
---

<ul class="list" {...props}>
  <slot />
</ul>

<style>
  .list {
    display: grid;
    grid-template-columns: repeat(var(--columns), 1fr);
    gap: var(--space-l);
    padding: 0;
    margin: 0;
    list-style: none;
    --columns: 1;

    @container (inline-size >= 560px) {
      --columns: 2;
    }
  }
</style>
