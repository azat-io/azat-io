---
import Typography from '~/components/Typography.astro'

interface Props {
  mbe?: '2xs' | 'xl' | 'xs' | 'l' | 'm' | 's'
  mbs?: '2xs' | 'xl' | 'xs' | 'l' | 'm' | 's'
  align?: 'center' | 'start' | 'end'
  itemprop?: string
  id?: string
}

let { align = 'center', ...props } = Astro.props
---

<Typography
  color="brand"
  size="2xl"
  size="2xl"
  tag="h1"
  mbe="m"
  mbs="l"
  {align}
  bold
  {...props}
>
  <slot />
</Typography>
