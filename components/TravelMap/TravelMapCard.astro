---
import Typography from '~/components/Typography.astro'
import Flag from '~/components/Flag.astro'

interface Props {
  originName: string
  originLang: string
  name: string
  code: string
  tag?: string
}

let { tag = 'div', originName, originLang, name, code } = Astro.props

let Tag = tag
---

<Tag class:list="card-wrapper">
  <figure class="card">
    <Flag
      {code}
      {name}
    />
    <figcaption class="caption">
      <Typography
        color="brand"
        class="name"
        mbe="2xs"
        size="s"
        tag="h2"
      >
        {name}
      </Typography>
      <Typography
        lang={originLang}
        class="name"
        size="2xs"
        tag="span"
        >{originName}</Typography
      >
    </figcaption>
  </figure>
</Tag>

<style>
  .card-wrapper {
    margin-block: 0;
  }

  .card {
    display: flex;
    gap: var(--space-m);
    place-items: center;
    margin: 0;
  }

  .caption {
    display: flex;
    flex-direction: column;
  }

  .name:is(h2, span) {
    line-height: 1.1;
  }
</style>
