---
interface Props {
  itemscope?: boolean
  itemtype?: string
  size?: 'm' | 'l'
  class?: string
  tag?: string
}

let { class: className, tag = 'div', size = 'm', ...props } = Astro.props

let Tag = tag
---

<Tag class:list={['container', `size-${size}`, className]} {...props}>
  <slot />
</Tag>

<style>
  .container {
    inline-size: min(var(--min-size), 100vi);
    padding: var(--space-l) var(--space-m);
    margin-inline: auto;
    container-type: inline-size;
  }

  .size-m {
    --min-size: clamp(38.75rem, 13.75rem + 40vi, 53.75rem);
  }

  .size-l {
    --min-size: clamp(57.5rem, 26rem + 45vi, 80rem);
  }
</style>
