{
  "include": ["**/*.svelte", "**/*.astro", "**/*.ts", "env.d.ts"],
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "types": [
      "@poppanator/sveltekit-svg/dist/svg",
      "astro/astro-jsx",
      "astro/client"
    ],
    "verbatimModuleSyntax": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "~/components/*": ["./components/*"],
      "~/package.json": ["./package.json"],
      "~/layouts/*": ["./layouts/*"],
      "~/locales/*": ["./locales/*"],
      "~/content/*": ["./content/*"],
      "~/styles/*": ["./styles/*"],
      "~/assets/*": ["./assets/*"],
      "~/pages/*": ["./pages/*"],
      "~/locales": ["./locales"],
      "~/utils/*": ["./utils/*"],
      "~/icons/*": ["./icons/*"],
      "~/data/*": ["./data/*"],
      "~/lib/*": ["./lib/*"]
    }
  }
}
